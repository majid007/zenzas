{% extends "::base.html.twig" %}
 
{% block title %}Formulario{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/testfront/css/estilosBase.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/testfront/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('bundles/testfront/css/font-awesome.min.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block cabecero_block %}
{% endblock %}

{% block body %}

    {#{{ form(form) }}#}
    {{ form_start(form) }}

        <select class="form-control">
            {% for producto in productos %}
                <option value="{{ producto.id }}">{{ producto.nombre }}</option>
            {% endfor %}
        </select>



    <div class="form_error">{{ form_errors(form) }}</div>

    <div class="form_bloque">
        <div class="form_error">{{ form_errors(form.nombre) }}</div>
        <div class="form_label">{{ form_label(form.nombre) }}</div>
        <div class="form_input">{{ form_widget(form.nombre) }}</div>
    </div>

    <div class="form_bloque">
        <div class="form_error">{{ form_errors(form.precio) }}</div>
        <div class="form_label">{{ form_label(form.precio) }}</div>
        <div class="form_input">{{ form_widget(form.precio) }}</div>
    </div>

    <div class="form_bloque">
        <div class="form_error">{{ form_errors(form.precio2) }}</div>
        <div class="form_label">{{ form_label(form.precio2) }}</div>
        <div class="form_input">{{ form_widget(form.precio2) }}</div>
    </div>

    <div class="form_bloque">
        <div class="form_error">{{ form_errors(form.descripcion) }}</div>
        <div class="form_label">{{ form_label(form.descripcion) }}</div>
        <div class="form_input">{{ form_widget(form.descripcion) }}</div>
    </div>

    <div class="form_bloque">
        {{ form_widget(form.Guardar) }}
    </div>
    {{ form_end(form) }}

{% endblock %}
