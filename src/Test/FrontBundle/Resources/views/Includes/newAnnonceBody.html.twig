
{{ form_start(form,{'enctype':'multipart/form-data'}) }}
<div>{{ form_errors(form) }}</div>
<div class="container">
    <div class="row">
        <div class="col-xs-12 titre-page">
            <h3>NOUVELLE ANNONCE <small>Voiture d'occasion</small></h3>
            <h4><i class="fa fa-square" aria-hidden="true"></i> ETAPE > #1</h4>
        </div>

        <div class="col-xs-12 panel-group" id="accordion">
            <div class="btn-group btn-group-3 input-group col-xs-12 btn-group-justified" data-toggle="buttons" id="type-vehicule">
                <label class="btn btn-primary active">
                    <input type="radio" name="options" class="options" id="op1" value="voiture" checked="checked"/><i class="fa fa-car"></i>
                </label>
                <label class="btn btn-primary">
                    <input type="radio" name="options" class="options" id="op2" value="moto"/><i class="fa fa-motorcycle"></i>
                </label>
                <label class="btn btn-primary">
                    <input type="radio" name="options" class="options" id="op3" value="truck"/><i class="fa fa-truck"></i>
                </label>
                <label class="btn btn-primary">
                    <input type="radio" name="options" class="options" id="op4" value="bateau"/><i class="fa fa-ship"></i>
                </label>
                <label class="btn btn-primary">
                    <input type="radio" name="options" class="options" id="op5" value="piece"/><i class="fa fa-cogs"></i>
                </label>
            </div><!-- fin #type-vehicule-->
            <div class="panel panel-default" id="location">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#aaccordion" href="#ac1"><i class="fa fa-map-pin"></i><span> LOCALISATION</span><i class="fa fa-plus-square-o peq"></i></a>
                    </h4>
                </div>
                <div class="panel-collapse collapse" id="ac1">
                    <div class="panel-body">
                        <div class="form-group">
                            <select class="form-control" id="villes">
                                <option>Sélectionner une Ville ...</option>
                                <optgroup label="LES GRANDES VILLES">
